<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.recyclerview.MainActivity"
    android:id="@+id/drawerLayout">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0066ff">
            <include
                layout="@layout/navigation_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/search"
                    android:layout_gravity="center"
                    android:hint="Search for Products,Brands and More"
                    android:textSize="18dp"
                    android:padding="2dp"/>                                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#0066ff"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtView1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableTop="@drawable/offer"
                    android:text="Offer"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableTop="@drawable/electronics"
                    android:text="Electronics"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2.14"
                    android:drawableTop="@drawable/fashion"
                    android:text="Fashion"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableTop="@drawable/home"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableTop="@drawable/more"
                    android:text="More"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ad1" />

                    <ImageView
                        android:id="@+id/pImageView1"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ad5" />

                    <ImageView
                        android:id="@+id/pImageView2"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:src="@drawable/ad2"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"/>


                </LinearLayout>


            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deals of the Day"
                        android:textColor="#FFF"
                        android:textSize="25dp"
                        android:paddingLeft="20dp"
                        android:id="@+id/deals"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deals"
                        android:drawableLeft="@drawable/clock"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        android:paddingLeft="15dp"
                        android:text="01h 42m remaining"
                        android:textColor="#7ca7ef" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="View all"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:background="#0066ff">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:scrollbars="none"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="2dp"/>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
